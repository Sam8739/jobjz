    <script>
      // 图片轮播功能
      let galleryIndexes = { gallery4: 0 };
      const galleryItemWidth = 400 + 16; // 图片宽度+间距
      
      function moveGallery(direction, galleryId) {
        const track = document.getElementById(galleryId);
        galleryIndexes[galleryId] += direction;
        
        const items = track.children.length;
        if (galleryIndexes[galleryId] < 0) galleryIndexes[galleryId] = 0;
        if (galleryIndexes[galleryId] > items - 1) galleryIndexes[galleryId] = items - 1;
        
        track.scrollTo({
          left: galleryIndexes[galleryId] * galleryItemWidth,
          behavior: 'smooth'
        });
      }
    </script>
